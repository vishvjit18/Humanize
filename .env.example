# CSV Logging
# Path to CSV log file (default: logs/paraphraser_results.csv)
CSV_LOG_PATH=logs/paraphraser_results.csv

# Model Cache
# Optional: Directory to cache downloaded models
# MODEL_CACHE_DIR=models_cache

# Language Tool Settings
# Language code for grammar checking (default: en-US)
LANGUAGE_TOOL_LANG=en-US
# Use remote LanguageTool server (default: false)
LANGUAGE_TOOL_REMOTE=false

# Similarity Model
# Sentence transformer model for similarity calculation
SIMILARITY_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Gradio Settings
# Server hostname (default: 0.0.0.0)
GRADIO_SERVER_NAME=0.0.0.0
# Server port (default: 7860)
GRADIO_SERVER_PORT=7860
# Share via public URL (default: false)
GRADIO_SHARE=false

# Logging
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL=INFO
# Optional: Path to log file
# LOG_FILE=logs/app.log
